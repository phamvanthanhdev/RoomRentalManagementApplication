<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewHinhDV"
            android:layout_width="123dp"
            android:layout_height="96dp"

            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewTenPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Title"
            app:layout_constraintEnd_toEndOf="@+id/imageViewHinhDV"
            app:layout_constraintStart_toStartOf="@+id/imageViewHinhDV"
            app:layout_constraintTop_toBottomOf="@+id/imageViewHinhDV" />

        <TextView
            android:id="@+id/textViewGiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="25.000"
            app:layout_constraintEnd_toEndOf="@+id/imageViewHinhDV"
            app:layout_constraintStart_toStartOf="@+id/imageViewHinhDV"
            app:layout_constraintTop_toBottomOf="@+id/textViewTenPhong" />

        <TextView
            android:id="@+id/textViewDonVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VND"
            app:layout_constraintEnd_toEndOf="@+id/imageViewHinhDV"
            app:layout_constraintStart_toStartOf="@+id/imageViewHinhDV"
            app:layout_constraintTop_toBottomOf="@+id/textViewGiaTien" />

        <ImageView
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"

            app:layout_constraintBottom_toBottomOf="@+id/imageViewHinhDV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewHinhDV"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>